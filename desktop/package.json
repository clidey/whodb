{
  "name": "whodb-desktop",
  "version": "1.0.0",
  "description": "WhoDB Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.clidey.whodb",
    "productName": "WhoDB",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "icon.*",
      "../core/whodb*"
    ],
    "extraFiles": [
      {
        "from": "../core",
        "to": "resources",
        "filter": ["whodb*"]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development",
      "icon": "icon.png"
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1"
  }
}