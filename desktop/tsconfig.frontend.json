{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ee/*": ["../ee/frontend/src/*"],
      "@graphql": ["src/generated/graphql.tsx"]
    },
    "allowImportingTsExtensions": true
  },
  "include": [
    "src",
    "../ee/frontend/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}